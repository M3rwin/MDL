{% extends 'base.html.twig' %}

{% block title %}Hello ModifierController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        table {
            margin-top: 10px;
            border-collapse: collapse;
            border: 2px solid rgb(140 140 140);
            font-family: sans-serif;
            font-size: 0.8rem;
            letter-spacing: 1px;
        }

        thead {
            background-color: rgb(228 240 245);
        }

        th,
        td {
            border: 1px solid rgb(160 160 160);
            padding: 8px 10px;
        }

        td:last-of-type {
            text-align: center;
        }

        tbody > tr:nth-of-type(even) {
            background-color: rgb(237 238 242);
        }
        
        .content{
            display: flex;
            justify-content: center;
        }

    </style>

    <div class="content">
        <table>
            <thead>
                <tr>
                    <th scope="col">Atelier</th>
                    <th scope="col">Vacation</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for atelier in ateliers %}
                    {% if atelier.vacations|length > 0 %}
                    <tr>
                        <th scope="row">{{ atelier.libelle }}</th>
                        <td>{% for vacation in atelier.vacations %}{{ vacation.dateheuredebut|date('d-m-Y H:i') }} Ã  {{ vacation.dateheurefin|date('Y-m-d H:i') }}{% endfor %}</td>
                        <td>{% for vacation in atelier.vacations %}<a href="/modifier/{{ atelier.id }}">Modifier vacation {{ atelier.id }}</a>{% endfor %}</td>
                    </tr>
                    {% endif %}
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
