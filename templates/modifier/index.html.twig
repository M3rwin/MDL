{% extends 'base.html.twig' %}

{% block title %}Hello ModifierController!{% endblock %}

{% block body %}
    <style>
        
        .content{
            display: flex;
            justify-content: center;
        }

    </style>

    <div class="content">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Atelier</th>
                    <th scope="col">Nombre de vacations</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for atelier in ateliers %}
                    {% if atelier.vacations|length > 0 %}
                    <tr>
                        <th scope="row">{{ atelier.libelle }}</th>
                        <td>{{ atelier.vacations|length }}</td>
                        <td><a href="/modifier/{{ atelier.id }}">Afficher les vacations</a></td>
                    </tr>
                    {% endif %}
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
